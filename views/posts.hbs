<div class="row">
    <div class="col-md-12">
          <h2>Posts <a href="/posts/add" class="btn btn-success pull-right">Add Post</a></h2>
           
            <hr />
       
         <div class="table-responsive">
            <table class="table ">
                    <thead>
                        <tr>
                            <th>Post&nbsp;ID</th>
                            <th>Title</th>
                            <th>Post&nbsp;Date</th>
                            <th>Category</th>
                            <th>Published</th>
                            <th></th>
                        </tr>
                    </thead>
                     {{#each posts}}
                        <tbody>
                            <tr>
                                <td>{{this.id}}</td>
                                <td>{{this.title}}</td>
                                <td> {{#formatDate this.postDate}}{{/formatDate}}</td>
                                <td><a href="/posts?category={{this.category}}">{{this.category}}</a></td>
                                <td>{{this.published}}</td>
                                <td><a class="btn btn-danger" href="/posts/delete/{{this.id}}">remove</a></td>
                            </tr>
                        
                          </tbody>
        
                     {{/each}}
                   
            </table>
        </div>
    </div>



    {{#unless posts}}
    <div class="col-md-12 text-center">
            <strong>{{message}}</strong>
    </div>
    {{/unless}}
</div>

 